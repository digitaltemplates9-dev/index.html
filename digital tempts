        // Current selected package
        let selectedPackage = null;
        
        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            initializeApp();
            setupEventListeners();
        });
        
        // Initialize the application
        function initializeApp() {
            // Setup FAQ accordion
            setupFAQ();
            
            // Setup language switcher
            setupLanguageSwitcher();
        }
        
        // Set up event listeners
        function setupEventListeners() {
            // Package selection buttons
            document.querySelectorAll('.select-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const packageType = this.getAttribute('data-package');
                    selectPackage(packageType);
                });
            });
            
            // Template preview buttons
            document.querySelectorAll('.template-card').forEach(card => {
                card.addEventListener('click', function() {
                    const templateId = this.getAttribute('data-template');
                    showTemplatePreview(templateId);
                });
            });
            
            // M-Pesa number click
            document.getElementById('mpesaNumber').addEventListener('click', showMpesaPrompt);
            
            // Modal close buttons
            document.getElementById('closeModal').addEventListener('click', closeModal);
            document.getElementById('closeTemplateModal').addEventListener('click', closeTemplateModal);
            
            // Close modals when clicking outside
            document.getElementById('purchaseModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeModal();
                }
            });
            
            document.getElementById('templateModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeTemplateModal();
                }
            });
            
            document.getElementById('mpesaPrompt').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeMpesaPrompt();
                }
            });
            
            // Close prompt with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeModal();
                    closeTemplateModal();
                    closeMpesaPrompt();
                }
            });
        }
        
        // Select a package
        function selectPackage(packageType) {
            selectedPackage = packageType;
            const packageData = packages[packageType];
            
            // Update modal content
            document.getElementById('selectedPackageInfo').innerHTML = `
                <h4 style="font-family: 'Poppins', sans-serif; color: #60a5fa; margin-bottom: 10px;">${packageData.name}</h4>
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px;">
                    <div>
                        <div style="font-size: 2.5rem; font-weight: 800; color: #10b981;">${packageData.price}</div>
                        <div style="color: #94a3b8;">${packageData.delivery}</div>
                    </div>
                    <div style="background: #1e3a8a; color: #60a5fa; padding: 8px 16px; border-radius: 20px; font-weight: 600;">
                        <i class="fas fa-box"></i> ${packageData.features.length} Templates
                    </div>
                </div>
                <div>
                    <strong style="color: #cbd5e1;">Includes:</strong>
                    <ul style="margin-top: 10px; color: #cbd5e1;">
                        ${packageData.features.map(feature => `<li>${feature}</li>`).join('')}
                    </ul>
                </div>
            `;
            
            // Update package price
            document.getElementById('packagePrice').textContent = packageData.price;
            
            // Update WhatsApp link
            const whatsappBtn = document.getElementById('whatsappBtn');
            const encodedMessage = encodeURIComponent(`${packageData.whatsappMessage} I paid ${packageData.price} to 0769 484 053`);
            whatsappBtn.href = `https://wa.me/254742256591?text=${encodedMessage}`;
            
            // Show modal
            document.getElementById('purchaseModal').classList.add('active');
            
            // Hide success message
            document.getElementById('successMessage').classList.remove('show');
        }
        
        // Show template preview
        function showTemplatePreview(templateId) {
            const template = templates[templateId];
            
            // Update modal content
            document.getElementById('templateModalTitle').textContent = template.title;
            document.getElementById('templateModalDescription').innerHTML = `
                <h4 style="color: #60a5fa; margin-bottom: 15px;">${template.title}</h4>
                <p style="color: #cbd5e1; margin-bottom: 20px;">${template.description}</p>
                <p style="color: #94a3b8; font-size: 0.9rem;">
                    <i class="fas fa-info-circle"></i> This template is included in all our packages. Purchase any package to get access.
                </p>
            `;
            
            // Show modal
            document.getElementById('templateModal').classList.add('active');
        }
        
        // Show M-Pesa prompt
        function showMpesaPrompt() {
            document.getElementById('mpesaPrompt').classList.add('active');
        }
        
        // Close M-Pesa prompt
        function closeMpesaPrompt() {
            document.getElementById('mpesaPrompt').classList.remove('active');
        }
        
        // Copy M-Pesa number
        function copyMpesaNumber() {
            const mpesaNumber = '0769 484 053';
            navigator.clipboard.writeText(mpesaNumber).then(() => {
                alert('M-Pesa number copied to clipboard: ' + mpesaNumber);
                closeMpesaPrompt();
            });
        }
        
        // Close modal
        function closeModal() {
            document.getElementById('purchaseModal').classList.remove('active');
        }
        
        // Close template modal
        function closeTemplateModal() {
            document.getElementById('templateModal').classList.remove('active');
        }
        
        // Setup FAQ accordion
        function setupFAQ() {
            const faqItems = document.querySelectorAll('.faq-item');
            
            faqItems.forEach(item => {
                const question = item.querySelector('.faq-question');
                question.addEventListener('click', () => {
                    // Close all other items
                    faqItems.forEach(otherItem => {
                        if (otherItem !== item) {
                            otherItem.classList.remove('active');
                        }
                    });
                    
                    // Toggle current item
                    item.classList.toggle('active');
                });
            });
        }
        
        // Setup language switcher
        function setupLanguageSwitcher() {
            const langButtons = document.querySelectorAll('.lang-btn');
            const englishDesc = document.querySelector('.description-en');
            const swahiliDesc = document.querySelector('.description-sw');
            
            langButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    // Update active button
                    langButtons.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Show selected language
                    const lang = this.getAttribute('data-lang');
                    if (lang === 'en') {
                        englishDesc.style.display = 'block';
                        swahiliDesc.style.display = 'none';
                    } else {
                        englishDesc.style.display = 'none';
                        swahiliDesc.style.display = 'block';
                    }
                });
            });
        }
        
        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // 1, 2, 3 to select packages
            if (e.key === '1') {
                selectPackage('basic');
            } else if (e.key === '2') {
                selectPackage('standard');
            } else if (e.key === '3') {
                selectPackage('premium');
            }
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
