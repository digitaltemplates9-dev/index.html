            },
            {
                id: 9,
                name: "Company Profile Template",
                description: "Complete company profile template for presenting your business to clients, investors, or partners. Showcase your mission, team, and achievements.",
                features: ["Complete Structure", "Mission & Vision", "Team Section", "Achievements", "Professional Layout"]
            },
            {
                id: 10,
                name: "Cover Letter Template",
                description: "Professional cover letter template that matches our CV designs. Customizable for different industries and positions across Africa.",
                features: ["Matching Design", "Industry Specific", "Customizable", "Professional Tone", "ATS Friendly"]
            }
        ];
        
        // Current selected package
        let selectedPackage = null;
        
        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            initializeApp();
            setupEventListeners();
            setupAnimations();
            startCounterAnimation();
        });
        
        // Initialize the application
        function initializeApp() {
            // Setup scroll animations
            setupScrollAnimations();
        }
        
        // Set up event listeners
        function setupEventListeners() {
            // Package selection buttons
            document.querySelectorAll('.select-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                });
            });
            
            // Close modals when clicking outside
            document.addEventListener('click', function(e) {
                if (e.target.id === 'purchaseModal') {
                    closeModal();
                }
                if (e.target.id === 'templateModal') {
                    closeTemplateModal();
                }
            });
            
            // Keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeModal();
                    closeTemplateModal();
                }
            });
        }
        
        // Setup animations
        function setupAnimations() {
            // Add hover effects to all interactive elements
            document.querySelectorAll('.package-card, .template-card, .info-badge, .language-tab').forEach(element => {
                element.addEventListener('mouseenter', function() {
                    this.style.transform = this.style.transform.replace(/scale\([^)]+\)/, '') + ' scale(1.02)';
                });
                
                element.addEventListener('mouseleave', function() {
                    this.style.transform = this.style.transform.replace(/scale\([^)]+\)/, '');
                });
            });
        }
        
        // Setup scroll animations
        function setupScrollAnimations() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            });
            
            // Observe all animate-on-scroll elements
            document.querySelectorAll('.animate-on-scroll').forEach(el => {
                observer.observe(el);
            });
        }
        
        // Start counter animation
        function startCounterAnimation() {
            const counter = document.querySelector('.counter');
            if (counter) {
                let count = 0;
                const target = 2500;
                const increment = target / 100;
                
                const timer = setInterval(() => {
                    count += increment;
                    counter.textContent = Math.floor(count) + '+';
                    
                    if (count >= target) {
                        counter.textContent = target + '+';
                        clearInterval(timer);
                    }
                }, 20);
            }
        }
        
        // Select package
        function selectPackage(packageType) {
            selectedPackage = packageType;
            openPurchaseModal(packageType);
            
            // Scroll to payment section smoothly
            document.getElementById('paymentSection').scrollIntoView({
                behavior: 'smooth',
                block: 'center'
            });
        }
        
        // Open purchase modal
        function openPurchaseModal(packageType) {
            selectedPackage = packageType;
            const packageData = packages[packageType];
            
            // Update modal content
            document.getElementById('selectedPackageInfo').innerHTML = `
                <h4 style="font-family: 'Poppins', sans-serif; color: #60a5fa; margin-bottom: 15px; font-size: 1.5rem;">
                    <i class="fas fa-box"></i> ${packageData.name}
                </h4>
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; flex-wrap: wrap; gap: 15px;">
                    <div>
                        <div style="font-size: 2.8rem; font-weight: 800; color: var(--accent);">${packageData.price}</div>
                        <div style="color: #cbd5e1; font-size: 1.1rem;">
                            <i class="fas fa-clock"></i> ${packageData.delivery}
                        </div>
                    </div>
                    <div style="background: rgba(59, 130, 246, 0.2); color: #60a5fa; padding: 10px 20px; border-radius: 20px; font-weight: 600; border: 1px solid var(--primary);">
                        <i class="fas fa-file-alt"></i> ${packageData.features.length} Templates Included
                    </div>
                </div>
                <div>
                    <strong style="color: #cbd5e1; display: block; margin-bottom: 10px;">Package Includes:</strong>
                    <ul style="color: #cbd5e1; padding-left: 20px;">
                        ${packageData.features.map(feature => `<li style="margin-bottom: 8px;">${feature}</li>`).join('')}
                    </ul>
                </div>
            `;
            
            // Update package price
            document.getElementById('packagePrice').textContent = packageData.price;
            
            // Update WhatsApp link
            const whatsappBtn = document.getElementById('whatsappBtn');
            const message = `Hello! I've just purchased the ${packageData.name} (${packageData.price}). Here is my payment confirmation:`;
            whatsappBtn.href = `https://wa.me/${WHATSAPP_NUMBER.replace('+', '')}?text=${encodeURIComponent(message)}`;
            
            // Show modal with animation
            document.getElementById('purchaseModal').style.display = 'flex';
            setTimeout(() => {
                document.getElementById('purchaseModal').style.opacity = '1';
            }, 10);
            
            // Hide success message
            document.getElementById('successMessage').style.display = 'none';
        }
        
        // Show template preview
        function showTemplatePreview(templateId) {
            const template = templates.find(t => t.id === templateId);
            const colors = [
                'linear-gradient(135deg, #8b5cf6, #7c3aed)',
                'linear-gradient(135deg, #3b82f6, #2563eb)',
                'linear-gradient(135deg, #10b981, #059669)',
                'linear-gradient(135deg, #f59e0b, #d97706)',
                'linear-gradient(135deg, #ef4444, #dc2626)',
                'linear-gradient(135deg, #ec4899, #db2777)',
                'linear-gradient(135deg, #14b8a6, #0d9488)',
                'linear-gradient(135deg, #f97316, #ea580c)',
                'linear-gradient(135deg, #6366f1, #4f46e5)',
                'linear-gradient(135deg, #84cc16, #65a30d)'
            ];
            
            document.getElementById('templatePreviewContent').innerHTML = `
                <div style="text-align: center; margin-bottom: 30px;">
                    <div style="height: 200px; border-radius: 15px; margin-bottom: 20px; background: ${colors[templateId-1]}; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-file-alt" style="color: white; font-size: 5rem;"></i>
                    </div>
                    <h3 style="color: #60a5fa; margin-bottom: 15px; font-size: 2rem;">${template.name}</h3>
                    <p style="color: #cbd5e1; font-size: 1.1rem; line-height: 1.6;">${template.description}</p>
                </div>
                
                <div style="background: rgba(255, 255, 255, 0.05); padding: 25px; border-radius: 15px; margin-bottom: 30px;">
                    <h4 style="color: #60a5fa; margin-bottom: 20px; font-size: 1.3rem;">
                        <i class="fas fa-star"></i> Key Features:
                    </h4>
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 15px;">
                        ${template.features.map(feature => `
                            <div style="background: rgba(59, 130, 246, 0.1); color: #60a5fa; padding: 15px; border-radius: 10px; border: 1px solid rgba(59, 130, 246, 0.3); text-align: center;">
                                <i class="fas fa-check-circle" style="margin-right: 8px;"></i> ${feature}
                            </div>
                        `).join('')}
                    </div>
                </div>
                
                <div style="text-align: center; padding: 20px; background: rgba(16, 185, 129, 0.1); border-radius: 15px; border: 2px solid var(--accent);">
                    <p style="color: #34d399; margin-bottom: 20px; font-size: 1.1rem;">
                        <i class="fas fa-info-circle"></i> This template is included in all our packages. Select a package to get access to this and other premium templates.
                    </p>
                    <div style="display: flex; gap: 15px; justify-content: center; flex-wrap: wrap;">
                        <button onclick="selectPackage('basic'); closeTemplateModal();" style="background: linear-gradient(135deg, var(--accent), #059669); color: white; border: none; padding: 15px 30px; border-radius: 10px; font-weight: 600; cursor: pointer; transition: all 0.3s ease;">
                            <i class="fas fa-shopping-cart"></i> Get Basic Package
                        </button>
                        <button onclick="selectPackage('premium'); closeTemplateModal();" style="background: linear-gradient(135deg, var(--secondary), #7c3aed); color: white; border: none; padding: 15px 30px; border-radius: 10px; font-weight: 600; cursor: pointer; transition: all 0.3s ease;">
                            <i class="fas fa-crown"></i> Get Premium Package
                        </button>
                    </div>
                </div>
            `;
            
            // Show modal with animation
            document.getElementById('templateModal').style.display = 'flex';
            setTimeout(() => {
                document.getElementById('templateModal').style.opacity = '1';
            }, 10);
        }
        
        // Copy M-Pesa number
        function copyMpesaNumber() {
            navigator.clipboard.writeText(MPESA_NUMBER).then(() => {
                showNotification("M-Pesa number copied to clipboard! ðŸ“±");
                
                // Show interactive prompt
                setTimeout(() => {
                    if (confirm(`ðŸŽ‰ M-Pesa number copied!\n\nNow follow these steps:\n\n1. ðŸ“± Open M-Pesa\n2. ðŸ’° Go to 'Lipa Na M-Pesa'\n3. ðŸ›’ Select 'Buy Goods and Services'\n4. ðŸ”¢ Enter till number: 522522\n5. ðŸ’µ Enter amount: ${selectedPackage ? packages[selectedPackage].price : 'KES 500'}\n6. ðŸ“ Use your name as reference\n\nClick OK to open WhatsApp and send your payment confirmation`)) {
                        const packageMsg = selectedPackage 
                            ? `Hello! I've paid KES ${packages[selectedPackage].price.replace('KES ', '')} for the ${packages[selectedPackage].name}. Here is my payment confirmation:`
                            : "Hello! I've made a payment for a digital template package. Here is my payment confirmation:";
                        window.open(`https://wa.me/${WHATSAPP_NUMBER.replace('+', '')}?text=${encodeURIComponent(packageMsg)}`, '_blank');
                    }
                }, 600);
            }).catch(err => {
                showNotification("Failed to copy. Please manually copy: " + MPESA_NUMBER);
            });
        }
        
        // Close modal
        function closeModal() {
            document.getElementById('purchaseModal').style.opacity = '0';
            setTimeout(() => {
                document.getElementById('purchaseModal').style.display = 'none';
            }, 300);
        }
        
        // Close template modal
        function closeTemplateModal() {
            document.getElementById('templateModal').style.opacity = '0';
            setTimeout(() => {
                document.getElementById('templateModal').style.display = 'none';
            }, 300);
        }
        
        // Switch language
        function switchLanguage(lang) {
            const englishDesc = document.getElementById('englishDescription');
            const swahiliDesc = document.getElementById('swahiliDescription');
            const englishTab = document.querySelector('.language-tab:nth-child(1)');
            const swahiliTab = document.querySelector('.language-tab:nth-child(2)');
            
            // Add transition effect
            englishDesc.style.opacity = '0';
            swahiliDesc.style.opacity = '0';
            
            setTimeout(() => {
                if (lang === 'english') {
                    englishDesc.style.display = 'block';
                    swahiliDesc.style.display = 'none';
                    englishTab.classList.add('active');
                    swahiliTab.classList.remove('active');
                    englishDesc.style.opacity = '1';
                } else {
                    englishDesc.style.display = 'none';
                    swahiliDesc.style.display = 'block';
                    englishTab.classList.remove('active');
                    swahiliTab.classList.add('active');
                    swahiliDesc.style.opacity = '1';
                }
            }, 300);
        }
        
        // Show notification
        function showNotification(message) {
            const notification = document.getElementById('notification');
            const notificationText = document.getElementById('notificationText');
            
            notificationText.textContent = message;
            notification.classList.add('show');
            
            // Add animation
            notification.style.animation = 'none';
            setTimeout(() => {
                notification.style.animation = '';
            }, 10);
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
        
        // Add more interactive effects
        function addRippleEffect(element) {
            element.addEventListener('click', function(e) {
                const ripple = document.createElement('span');
                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;
                
                ripple.style.width = ripple.style.height = size + 'px';
                ripple.style.left = x + 'px';
                ripple.style.top = y + 'px';
                ripple.classList.add('ripple');
                
                this.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.remove();
                }, 600);
            });
        }
        
        // Apply ripple effect to buttons
        document.querySelectorAll('.select-btn, .preview-btn, .language-tab, .mpesa-box').forEach(addRippleEffect);
    </script>
</body>
</html>
