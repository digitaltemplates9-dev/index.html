                whatsappMessage: "Hello! I've just purchased the BASIC PACKAGE for KES 500. Here is my payment confirmation:"
            },
            standard: {
                name: "STANDARD PACKAGE",
                price: "KES 1,500",
                delivery: "Within 1 Hour",
                features: [
                    "Modern CV + Cover Letter Templates",
                    "Full Business Proposal Template",
                    "Invoice + Quotation Templates",
                    "30 Marketing Captions",
                    "Social Media Content Calendar (30 days)"
                ],
                whatsappMessage: "Hello! I've just purchased the STANDARD PACKAGE for KES 1,500. Here is my payment confirmation:"
            },
            premium: {
                name: "PREMIUM PACKAGE",
                price: "KES 3,000",
                delivery: "Same Day",
                features: [
                    "Premium CV + Cover Letter Templates",
                    "Full Business Proposal + Company Profile",
                    "Invoice, Quotation & Receipt Templates",
                    "100 Marketing Captions (AI-Optimized)",
                    "30-Day Content Calendar",
                    "Logo & Brand Kit Template (Canva)",
                    "Free Customization (Name, Business Type)"
                ],
                whatsappMessage: "Hello! I've just purchased the PREMIUM PACKAGE for KES 3,000. Here is my payment confirmation:"
            }
        };
        
        // Current selected package
        let selectedPackage = null;
        const SHAREABLE_LINK = "https://digitaltemplatesstore.com";
        const MPESA_NUMBER = "0769 484 053";
        const WHATSAPP_NUMBER = "+254742256591";
        
        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            initializeApp();
            setupEventListeners();
            animateStats();
        });
        
        // Initialize the application
        function initializeApp() {
            // Setup FAQ accordion
            setupFAQ();
            
            // Update shareable link
            document.getElementById('shareableLink').textContent = SHAREABLE_LINK;
            
            // Update WhatsApp links
            updateWhatsAppLinks();
            
            // Add scroll animation
            setupScrollAnimations();
        }
        
        // Set up event listeners
        function setupEventListeners() {
            // Modal close button
            document.getElementById('closeModal').addEventListener('click', closeModal);
            
            // Close modal when clicking outside
            document.getElementById('purchaseModal').addEventListener('click', function(e) {
                if (e.target === this) {
                    closeModal();
                }
            });
            
            // M-Pesa number click
            document.getElementById('mpesaNumber').addEventListener('click', copyMpesaNumber);
            
            // Keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                // Escape to close modal
                if (e.key === 'Escape') {
                    closeModal();
                }
                
                // 1, 2, 3 to select packages
                if (e.key === '1') {
                    selectPackage('basic');
                } else if (e.key === '2') {
                    selectPackage('standard');
                } else if (e.key === '3') {
                    selectPackage('premium');
                }
            });
        }
        
        // Select a package and scroll to payment section
        function selectPackage(packageType) {
            selectedPackage = packageType;
            const packageData = packages[packageType];
            
            // Update WhatsApp confirmation button
            const whatsappBtn = document.getElementById('whatsappConfirmationBtn');
            const encodedMessage = encodeURIComponent(`Hello! I've made payment for the ${packageData.name} (${packageData.price}). Here is my payment confirmation:`);
            whatsappBtn.href = `https://wa.me/${WHATSAPP_NUMBER.replace('+', '')}?text=${encodedMessage}`;
            
            // Show notification
            showToast(`âœ… Selected ${packageData.name} - ${packageData.price}. Scroll down to see payment instructions.`, 'success');
            
            // Add slight delay before scrolling
            setTimeout(() => {
                document.getElementById('how-to-pay').scrollIntoView({ 
                    behavior: 'smooth',
                    block: 'center'
                });
            }, 500);
        }
        
        // Copy M-Pesa number
        function copyMpesaNumber() {
            const mpesaElement = document.getElementById('mpesaNumber');
            const tooltip = document.getElementById('copyTooltip');
            
            // Copy to clipboard
            navigator.clipboard.writeText(MPESA_NUMBER).then(() => {
                // Show copied state
                mpesaElement.classList.add('copied');
                tooltip.textContent = 'âœ… Copied to clipboard!';
                tooltip.classList.add('show');
                
                // Show toast notification
                showToast(`âœ… M-Pesa number ${MPESA_NUMBER} copied to clipboard!`, 'success');
                
                // Reset after 2 seconds
                setTimeout(() => {
                    mpesaElement.classList.remove('copied');
                    tooltip.classList.remove('show');
                    setTimeout(() => {
                        tooltip.textContent = 'Click to copy M-Pesa number';
                    }, 300);
                }, 2000);
            }).catch(err => {
                showToast('âŒ Failed to copy. Please try again.', 'error');
            });
        }
        
        // Copy shareable link
        function copyShareLink() {
            navigator.clipboard.writeText(SHAREABLE_LINK).then(() => {
                showToast('âœ… Link copied to clipboard! Share with friends.', 'success');
            }).catch(err => {
                showToast('âŒ Failed to copy link.', 'error');
            });
        }
        
        // Share via WhatsApp
        function shareViaWhatsApp() {
            const message = encodeURIComponent(`Check out this amazing digital templates store! Professional CVs, business proposals, invoices, and more. Get yours now: ${SHAREABLE_LINK}`);
            window.open(`https://wa.me/?text=${message}`, '_blank');
        }
        
        // Show toast notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('notificationToast');
            const toastMessage = document.getElementById('toastMessage');
            
            // Set message and type
            toastMessage.textContent = message;
            toast.className = `toast ${type}`;
            
            // Show toast
            toast.classList.add('show');
            
            // Hide after 3 seconds
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
        
        // Setup FAQ accordion
        function setupFAQ() {
            const faqItems = document.querySelectorAll('.faq-item');
            
            faqItems.forEach(item => {
                const question = item.querySelector('.faq-question');
                question.addEventListener('click', () => {
                    // Close all other items
                    faqItems.forEach(otherItem => {
                        if (otherItem !== item) {
                            otherItem.classList.remove('active');
                        }
                    });
                    
                    // Toggle current item
                    item.classList.toggle('active');
                });
            });
        }
        
        // Animate stats counter
        function animateStats() {
            const customers = document.getElementById('customersCount');
            const templates = document.getElementById('templatesCount');
            const support = document.getElementById('supportCount');
            
            // Animate numbers
            animateNumber(customers, 247);
            animateNumber(templates, 589);
            animateNumber(support, 124);
        }
        
        // Animate number counting
        function animateNumber(element, target) {
            let current = 0;
            const increment = target / 50;
            const timer = setInterval(() => {
                current += increment;
                if (current >= target) {
                    current = target;
                    clearInterval(timer);
                }
                element.textContent = Math.floor(current).toLocaleString();
            }, 30);
        }
        
        // Update all WhatsApp links with new number
        function updateWhatsAppLinks() {
            // Update floating button
            const floatingBtn = document.querySelector('.floating-whatsapp');
            floatingBtn.href = `https://wa.me/${WHATSAPP_NUMBER.replace('+', '')}?text=${encodeURIComponent("Hello! I'm interested in your digital templates store. Can you help me choose the right package?")}`;
            
            // Update WhatsApp button in footer
            const footerWhatsapp = document.querySelector('footer a[href^="https://wa.me/"]');
            if (footerWhatsapp) {
                footerWhatsapp.href = `https://wa.me/${WHATSAPP_NUMBER.replace('+', '')}`;
            }
        }
        
        // Setup scroll animations
        function setupScrollAnimations() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.animation = 'fadeIn 0.8s ease forwards';
                    }
                });
            }, observerOptions);
            
            // Observe all sections
            document.querySelectorAll('section').forEach(section => {
                observer.observe(section);
            });
        }
        
        // Close modal
        function closeModal() {
            document.getElementById('purchaseModal').classList.remove('active');
        }
        
        // Loading spinner
        function showLoading() {
            document.getElementById('loadingSpinner').style.display = 'block';
        }
        
        function hideLoading() {
            document.getElementById('loadingSpinner').style.display = 'none';
        }
        
        // Simulate package purchase
        function simulatePurchase(packageType) {
            showLoading();
            
            // Simulate API call
            setTimeout(() => {
                hideLoading();
                showToast(`âœ… Purchase successful! Check your email for download links.`, 'success');
                
                // Show download section in modal
                document.getElementById('downloadSection').style.display = 'block';
                document.getElementById('successMessage').classList.add('show');
            }, 1500);
        }
        
        // Initialize tooltips
        function initTooltips() {
            const tooltips = document.querySelectorAll('[data-tooltip]');
            tooltips.forEach(element => {
                element.addEventListener('mouseenter', (e) => {
                    const tooltip = document.createElement('div');
                    tooltip.className = 'custom-tooltip';
                    tooltip.textContent = e.target.dataset.tooltip;
                    document.body.appendChild(tooltip);
                    
                    const rect = e.target.getBoundingClientRect();
                    tooltip.style.left = `${rect.left + rect.width / 2 - tooltip.offsetWidth / 2}px`;
                    tooltip.style.top = `${rect.top - tooltip.offsetHeight - 10}px`;
                    
                    e.target._tooltip = tooltip;
                });
                
                element.addEventListener('mouseleave', (e) => {
                    if (e.target._tooltip) {
                        e.target._tooltip.remove();
                    }
                });
            });
        }
        
        // Add CSS for custom tooltips
        const style = document.createElement('style');
        style.textContent = `
            .custom-tooltip {
                position: fixed;
                background: #1e293b;
                color: white;
                padding: 8px 12px;
                border-radius: 6px;
                font-size: 0.85rem;
                z-index: 10000;
                pointer-events: none;
                white-space: nowrap;
                opacity: 0;
                animation: tooltipFadeIn 0.2s ease forwards;
            }
            
            @keyframes tooltipFadeIn {
                from { opacity: 0; transform: translateY(5px); }
                to { opacity: 1; transform: translateY(0); }
            }
        `;
        document.head.appendChild(style);
        
        // Initialize tooltips
        setTimeout(initTooltips, 1000);
    </script>
</body>
</html>
