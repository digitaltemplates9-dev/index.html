        function initializeApp() {
            // Set up language switching
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const lang = this.getAttribute('data-lang');
                    switchLanguage(lang);
                });
            });
            
            // Initialize PIN input
            setupPinInput();
        }
        
        function setupEventListeners() {
            // Package selection buttons
            document.querySelectorAll('.select-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const packageType = this.getAttribute('data-package');
                    selectPackage(packageType);
                });
            });
            
            // Close modals when clicking outside
            document.querySelectorAll('.modal').forEach(modal => {
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        closeModal();
                    }
                });
            });
            
            // Overlay click to close M-Pesa prompt
            document.getElementById('mpesaOverlay').addEventListener('click', function() {
                closeMpesaPrompt();
            });
        }
        
        function setupPinInput() {
            const pinDigits = document.querySelectorAll('.pin-digit');
            pinDigits.forEach((digit, index) => {
                digit.addEventListener('input', function(e) {
                    if (this.value.length === 1) {
                        mpesaPin += this.value;
                        if (index < 3) {
                            pinDigits[index + 1].focus();
                        }
                    }
                });
                
                digit.addEventListener('keydown', function(e) {
                    if (e.key === 'Backspace' && this.value === '') {
                        if (index > 0) {
                            pinDigits[index - 1].focus();
                            mpesaPin = mpesaPin.slice(0, -1);
                        }
                    }
                });
            });
        }
        
        function moveToNext(input, nextIndex) {
            if (input.value.length === 1) {
                const nextInput = document.querySelector(`.pin-digit:nth-child(${nextIndex + 1})`);
                if (nextInput) nextInput.focus();
            }
        }
        
        function selectPackage(packageType) {
            selectedPackage = packageType;
            const packageData = packages[packageType];
            
            // Update modal content
            document.getElementById('packageName').textContent = packageData.name;
            document.getElementById('paymentAmount').textContent = packageData.price;
            
            // Show payment modal
            document.getElementById('paymentModal').classList.add('active');
            
            // Reset messages
            document.getElementById('mpesaSuccess').classList.remove('show');
        }
        
        function initiateMpesaPayment() {
            const phoneNumber = document.getElementById('phoneNumber').value;
            
            if (!phoneNumber || phoneNumber.length < 10) {
                alert('Please enter a valid M-Pesa number (10 digits starting with 07)');
                return;
            }
            
            if (!phoneNumber.startsWith('07')) {
                alert('M-Pesa number must start with 07');
                return;
            }
            
            const packageData = packages[selectedPackage];
            
            // Show M-Pesa prompt
            showMpesaPrompt(packageData);
        }
        
        function showMpesaPrompt(packageData) {
            // Update prompt details
            document.getElementById('promptAmount').textContent = packageData.price;
            document.getElementById('promptPhone').textContent = '254' + packageData.mpesa.replace('+', '').replace(/\s/g, '');
            document.getElementById('promptReference').textContent = selectedPackage.toUpperCase() + ' PACKAGE';
            
            // Show overlay and prompt
            document.getElementById('mpesaOverlay').classList.add('active');
            document.getElementById('mpesaPrompt').classList.add('active');
            
            // Reset PIN
            mpesaPin = "";
            document.querySelectorAll('.pin-digit').forEach(digit => {
                digit.value = '';
            });
            
            // Focus first PIN digit
            setTimeout(() => {
                document.querySelector('.pin-digit').focus();
            }, 300);
        }
        
        function confirmMpesaPayment() {
            const pinDigits = document.querySelectorAll('.pin-digit');
            const enteredPin = Array.from(pinDigits).map(digit => digit.value).join('');
            
            if (enteredPin.length !== 4) {
                alert('Please enter a valid 4-digit M-Pesa PIN');
                return;
            }
            
            // Validate PIN (simulation)
            if (enteredPin === '0000') {
                alert('Invalid PIN. Please use your actual M-Pesa PIN (1234 for demo)');
                return;
            }
            
            // Show processing animation
            const confirmBtn = document.querySelector('.mpesa-btn.confirm');
            const originalText = confirmBtn.innerHTML;
            confirmBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            confirmBtn.disabled = true;
            
            // Simulate payment processing
            setTimeout(() => {
                // Close M-Pesa prompt
                closeMpesaPrompt();
                
                // Show success message
                showPaymentSuccess();
                
                // Reset button
                confirmBtn.innerHTML = originalText;
                confirmBtn.disabled = false;
            }, 2000);
        }
        
        function cancelMpesaPayment() {
            closeMpesaPrompt();
            alert('Payment cancelled. You can try again anytime.');
        }
        
        function closeMpesaPrompt() {
            document.getElementById('mpesaOverlay').classList.remove('active');
            document.getElementById('mpesaPrompt').classList.remove('active');
            
            // Clear PIN
            mpesaPin = "";
            document.querySelectorAll('.pin-digit').forEach(digit => {
                digit.value = '';
            });
        }
        
        function showPaymentSuccess() {
            // Close payment modal
            document.getElementById('paymentModal').classList.remove('active');
            
            // Show success notification
            const successMsg = document.getElementById('mpesaSuccess');
            successMsg.classList.add('show');
            
            // Show access links after delay
            setTimeout(() => {
                showAccessLinks();
            }, 1500);
        }
        
        function showAccessLinks() {
            const modal = document.getElementById('accessModal');
            
            // Hide all links first
            document.querySelectorAll('.access-link').forEach(link => {
                link.style.display = 'none';
            });
            
            // Show only the relevant link
            if (selectedPackage === 'basic') {
                document.getElementById('basicLink').style.display = 'block';
            } else if (selectedPackage === 'standard') {
                document.getElementById('standardLink').style.display = 'block';
            } else if (selectedPackage === 'premium') {
                document.getElementById('premiumLink').style.display = 'block';
            }
            
            modal.classList.add('active');
        }
        
        function closeModal() {
            document.querySelectorAll('.modal').forEach(modal => {
                modal.classList.remove('active');
            });
        }
        
        function showTemplatePreview(title, description, type) {
            const modal = document.getElementById('previewModal');
            const previewContent = document.getElementById('previewContent');
            const previewTitle = document.getElementById('previewTitle');
            
            previewTitle.textContent = title;
            
            // Create preview content based on template type
            let content = `
                <div style="text-align: center; margin-bottom: 30px;">
                    <div style="font-size: 4rem; color: #3b82f6; margin-bottom: 20px;">
                        ${getTemplateIcon(type)}
                    </div>
                    <h4 style="color: #1e3a8a; margin-bottom: 15px;">${title}</h4>
                    <p style="color: #64748b; margin-bottom: 25px;">${description}</p>
                </div>
                
                <div style="background: #f8fafc; padding: 25px; border-radius: 15px; margin-bottom: 25px;">
                    <h5 style="color: #1e3a8a; margin-bottom: 15px;">Features Included:</h5>
                    <ul style="color: #475569;">
                        ${getTemplateFeatures(type)}
                    </ul>
                </div>
                
                <div style="background: #f0f9ff; padding: 20px; border-radius: 15px; text-align: center;">
                    <p style="color: #0369a1; margin-bottom: 15px;">
                        <i class="fas fa-info-circle"></i> This template is included in all packages
                    </p>
                    <button class="confirm-btn" style="padding: 12px 25px; width: auto;" onclick="closeModal(); selectPackage('basic')">
                        <i class="fas fa-shopping-cart"></i>
                        Purchase Package to Access
                    </button>
                </div>
            `;
            
            previewContent.innerHTML = content;
            modal.classList.add('active');
        }
        
        function getTemplateIcon(type) {
            const icons = {
                'cv': 'fas fa-user-tie',
                'letter': 'fas fa-file-alt',
                'proposal': 'fas fa-file-contract',
                'invoice': 'fas fa-file-invoice-dollar',
                'marketing': 'fas fa-bullhorn',
                'calendar': 'fas fa-calendar-alt',
                'business': 'fas fa-folder-open',
                'brand': 'fas fa-palette',
                'email': 'fas fa-envelope',
                'presentation': 'fas fa-presentation'
            };
            
            return `<i class="${icons[type] || 'fas fa-file'}"></i>`;
        }
        
        function getTemplateFeatures(type) {
            const features = {
                'cv': [
                    'ATS-friendly design',
                    'Fully editable sections',
                    'Professional formatting',
                    'Multiple color options',
                    'PDF export ready',
                    'Mobile responsive'
                ],
                'letter': [
                    'Matching CV design',
                    'Professional header',
                    'Customizable content',
                    'Multiple layout options',
                    'PDF export ready',
                    'Email ready format'
                ],
                'proposal': [
                    'Complete sections',
                    'Pricing tables',
                    'Timeline templates',
                    'Terms & conditions',
                    'Professional cover page',
                    'Client customization'
                ],
                'invoice': [
                    'Automatic calculations',
                    'Professional numbering',
                    'Tax calculations',
                    'Payment terms',
                    'Branding options',
                    'Multiple currency support'
                ]
            };
            
            const defaultFeatures = [
                'Fully editable',
                'Professional design',
                'Ready to use',
                'Multiple formats',
                'Customizable colors',
                'Instant download'
            ];
            
            const featureList = features[type] || defaultFeatures;
            return featureList.map(feature => `<li>${feature}</li>`).join('');
        }
        
        function copyShareLink() {
            const linkInput = document.getElementById('shareableLink');
            linkInput.select();
            linkInput.setSelectionRange(0, 99999);
            
            try {
                navigator.clipboard.writeText(linkInput.value);
                
                // Show success feedback
                const copyBtn = document.querySelector('.copy-btn');
                const originalText = copyBtn.innerHTML;
                copyBtn.innerHTML = '<i class="fas fa-check"></i> Copied!';
                copyBtn.style.background = '#10b981';
                
                setTimeout(() => {
                    copyBtn.innerHTML = originalText;
                    copyBtn.style.background = '';
                }, 2000);
            } catch (err) {
                console.error('Failed to copy: ', err);
            }
        }
        
        function switchLanguage(lang) {
            // Update active button
            document.querySelectorAll('.lang-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.getAttribute('data-lang') === lang) {
                    btn.classList.add('active');
                }
            });
            
            // Show/hide language content
            if (lang === 'en') {
                document.querySelector('.desc-en').style.display = 'block';
                document.querySelector('.desc-sw').style.display = 'none';
            } else {
                document.querySelector('.desc-en').style.display = 'none';
                document.querySelector('.desc-sw').style.display = 'block';
            }
        }
        
        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
                closeMpesaPrompt();
            }
            
            // Quick package selection
            if (e.key === '1') selectPackage('basic');
            if (e.key === '2') selectPackage('standard');
            if (e.key === '3') selectPackage('premium');
        });
        
        // Demo: Auto-fill M-Pesa number for testing
        function fillDemoPhone() {
            document.getElementById('phoneNumber').value = '0742256591';
        }
        
        // Initialize with demo phone (for testing)
        window.onload = fillDemoPhone;
    </script>
</body>
</html>
